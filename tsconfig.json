{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./app/javascript/*"],
    }
  },
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "include": ["app/javascript/**/*.ts*", "**/*.js"],
  "exclude": ["esbuild.config.js"]
}