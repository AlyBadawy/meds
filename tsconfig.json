{
  "compilerOptions": {
    "baseUrl": ".",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "jsx": "react",
    "module": "ES2022",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./app/javascript/src/*"],
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2022"
  },
  "include": ["app/javascript/**/*.ts*", "**/*.js", "esbuild.config.cjs"],
  "exclude": [],
  "types": ["node", "jest", "@testing-library/jest-dom", "@types/jest"]
}