{
  "compilerOptions": {
    // "target": "es2016",
    // "module": "commonjs",
    "target": "ES2022",
    "module": "ES2022",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": ".",
    "composite": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "incremental": true,
    "types": ["jest", "node", "@types/jest"],
    "sourceMap": true
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "paths": {
    "@/*": ["./app/javascript/src/*"],
  },
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "include": ["app/javascript/**/*.ts*", "**/*.js", "esbuild.config.cjs"],
  "exclude": []
}